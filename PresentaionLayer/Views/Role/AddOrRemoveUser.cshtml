@model List<UserInRoleViewModel>

@{
    ViewData["Title"] = "Add Or Remove User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Or Remove User</h1>

<form class="my-3" asp-action="AddOrRemoveUsers" asp-route-roleId="@ViewBag.RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group">
            <input asp-for="@Model[i].ISInRole" />
            <label asp-for="@Model[i].ISInRole">@Model[i].UserName</label>
        </div>

        <input type="hidden" asp-for="@Model[i].UserId" />
        <input type="hidden" asp-for="@Model[i].UserName" />
    }

    <div class="my-3">
        <input type="submit" value="Update" class="btn btn-success">
        <a asp-action="Edit" asp-route-id="@ViewBag.RoleId" class="btn btn-secondary">Cancel</a>
    </div>
</form>
